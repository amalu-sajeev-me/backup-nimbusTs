{
  "name": "backupnimbusts",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=6.0.0"
  },
  "description": "BackupNimbus is a fully automated, AWS-native backup system designed to protect and preserve your MongoDB Atlas data with zero human intervention. Built with Node.js, AWS Lambda, Docker, and EventBridge, this serverless solution performs daily encrypted backups using mongodump, stores them in Amazon S3, and secures credentials via AWS Systems Manager (SSM) â€” all without relying on external cron jobs or third-party infrastructure",
  "license": "ISC",
  "author": "AMALU SAJEEV",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "build:dev": "npm run build -- --sourceMap",
    "build:prod": "npm run build -- --sourceMap false",
    "start": "ts-node src/index.ts",
    "start:dev": "ts-node-dev --respawn src/index.ts",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/aws-lambda": "^8.10.148",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.782.0",
    "@aws-sdk/client-ses": "^3.782.0",
    "dotenv": "^16.4.7",
    "http-status-codes": "^2.3.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.9.1",
    "zod": "^3.24.2"
  }
}
